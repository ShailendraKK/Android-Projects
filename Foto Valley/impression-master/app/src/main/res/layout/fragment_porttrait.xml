<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose the Tag"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:id="@+id/textView7" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Outdoor"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_outdoor_portrait" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Individuals"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_individuals" />
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:text="Candid"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_candid_portrit" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kids"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_kids" />

            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:text="Fashion"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_Fashion" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Babies"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_babies" />

            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:text="Pets"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_pets" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"

                    android:text="Families"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_families_portrait" />
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"

                    android:text="HeadShots"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_headshots" />
            </LinearLayout>



        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
