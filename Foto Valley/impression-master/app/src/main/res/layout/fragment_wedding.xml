<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose the Tag"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:id="@+id/textView7" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Bride"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_bride" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Black and White"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_black_and_white" />
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:text="Groom"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_groom" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pre-Ceremony"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_preceremony" />

            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:text="Candid"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_Candid_wedding" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ceremony"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_ceremony" />

            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"
                    android:text="Family"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_Family_wedding" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:minWidth="100dp"
                    android:textSize="12dp"

                    android:text="Reception"
                    android:background="@drawable/mytag"
                    android:id="@+id/btn_reception" />
            </LinearLayout>



        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
